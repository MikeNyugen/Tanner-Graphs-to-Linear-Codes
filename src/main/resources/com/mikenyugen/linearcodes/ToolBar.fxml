<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<HBox layoutX="7.0" layoutY="-1.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      prefHeight="43.0" prefWidth="1006.0" spacing="2.0" style="-fx-border-color: SILVER; -fx-border-width: 2;"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mikenyugen.linearcodes.controllers.ToolBarController">
    <children>
        <ToggleButton fx:id="drag" mnemonicParsing="false" prefHeight="39.0" prefWidth="68.0">
            <toggleGroup>
                <ToggleGroup fx:id="nodes"/>
            </toggleGroup>
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
        </ToggleButton>
        <ToggleButton fx:id="selectButton" mnemonicParsing="false" prefHeight="39.0" prefWidth="101.0" text="Select"
                      toggleGroup="$nodes"/>
        <ToggleButton fx:id="removeSelection" mnemonicParsing="false" prefHeight="38.0" prefWidth="136.0"
                      text="Remove Selection" toggleGroup="$nodes"/>
        <ToggleButton fx:id="addMessageNode" alignment="CENTER_LEFT" mnemonicParsing="false" prefHeight="39.0"
                      prefWidth="166.0" text="Add Message Node" toggleGroup="$nodes"/>
        <ToggleButton fx:id="addParityNode" alignment="CENTER_LEFT" mnemonicParsing="false" prefHeight="39.0"
                      prefWidth="157.0" text="Add Check Node" toggleGroup="$nodes"/>
        <Button fx:id="addConnection" mnemonicParsing="false" prefHeight="39.0" prefWidth="126.0"
                text="Add Connection "/>
        <ToggleButton fx:id="removeConnection" mnemonicParsing="false" prefHeight="39.0" prefWidth="148.0"
                      text="Remove Connection" toggleGroup="$nodes"/>
        <Button fx:id="reset" mnemonicParsing="false" prefHeight="38.0" prefWidth="91.0" text="Reset"/>
        <Button fx:id="run" mnemonicParsing="false" prefHeight="39.0" prefWidth="102.0" text="Run"/>
    </children>
</HBox>